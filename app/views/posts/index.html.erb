<p style="color: green"><%= notice %></p>

<div>
  <%= form_with url: search_path, method: :post, remote: true do |form| %>
    <%= form.label :search %>
    <%= form.text_field :search %>
    <%= form.submit "Search", class: "btn btn-secondary" %>
  <% end %>
</div>

<h1>Posts</h1>

<div id="posts">
  <%= render 'posts' %>
</div>

<%= link_to "New post", new_post_path %>
