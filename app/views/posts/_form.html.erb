<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :post_type, style: "display: block" %>
    <%= form.select :post_type, options_for_select(Post::POST_TYPE) %>
  </div>

  <div>
    <%= form.label :genre, style: "display: block" %>
    <%= form.select :genre, options_for_select(Post::GENRE) %>
  </div>

  <div>
    <%= form.label :enabled, style: "display: block" %>
    <%= form.select :enabled, options_for_select(Post::ENABLED) %>
  </div>

  <div>
    <%= form.label :length, style: "display: block" %>
    <%= form.number_field :length, min:0, max:10 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
